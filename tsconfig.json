{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [ 
    "**/*.ts", 
    "**/*.svelte" 
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "svelte", "jest"],
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ]
  },
}
